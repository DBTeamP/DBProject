<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dbteam.xml.volunteer.VolMapper">
    <resultMap id="volResultMap" type="com.dbteam.common.dtopackage.VolDTO">
        <id property="volNum" column="vol_num"/>
        <result property="volName" column="vol_name"/>
        <result property="volTxt" column="vol_txt"/>
        <result property="volDate" column="vol_date"/>
        <result property="managerNum" column="manager_num"/>
    </resultMap>

    <resultMap id="checkAdmin" type="com.dbteam.common.dtopackage.UsersDTO">
        <id property = "userNum" column="user_num"/>
        <result property="userName" column="user_name"/>
        <result property="userId" column="user_ud"/>
        <result property="userPhone" column="user_phone"/>
        <result property="regionNum" column="region_num"/>
        <result property="adminRights" column="admin_rights"/>
    </resultMap>

    <delete
            id="deleteVol" parameterType="com.dbteam.common.dtopackage.VolDTO">
        DELETE
        FROM volunteer
        WHERE vol_num = #{ code }
    </delete>

    <insert id="insertVol" parameterType="com.dbteam.common.dtopackage.VolDTO">
        INSERT INTO volunteer(
            vol_name
            , vol_txt
            , vol_date
            , manager_num
        )
        VALUES(
            #{ volName }
            , #{ volTxt }
            , #{ volDate }
            , #{ managerNum }
        )
    </insert>

    <select id="selectAllVol" parameterType="com.dbteam.common.dtopackage.VolDTO" resultMap="volResultMap">
        SELECT vol_num
            , vol_name
            , vol_txt
            , vol_date
            , manager_num
        FROM volunteer
    </select>

    <select id="selectVolByTxt" parameterType="com.dbteam.common.dtopackage.VolDTO" resultMap="volResultMap">
        SELECT vol_num
            , vol_name
            , vol_txt
            , vol_date
            , manager_num
        FROM volunteer
        WHERE vol_name LIKE CONCAT('%', #{ volTxt }, '%')
    </select>

    <select id="checkRights" parameterType="com.dbteam.common.dtopackage.UsersDTO" parameterMap="checkAdmin">
        SELECT user_num
            , user_id
            , user_name
            , user_phone
            , region_num
            , admin_rights
        FROM users
        WHERE user_num = #{ num }
    </select>

</mapper>